{
  "manifest_version": 3,
  "name": "Twitch user tags",
  "version": "1.0",
  "description": "Добавляет пользователям на twitch подписи в чате",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}